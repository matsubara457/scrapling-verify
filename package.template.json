{
  "name": "{{PROJECT_NAME}}",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter @{{ORG}}/backend dev",
    "dev:frontend": "pnpm --filter @{{ORG}}/frontend dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "pnpm --filter @{{ORG}}/backend build",
    "build:frontend": "pnpm --filter @{{ORG}}/frontend build",
    "typecheck": "pnpm --filter @{{ORG}}/backend typecheck && pnpm --filter @{{ORG}}/frontend typecheck",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "tsx backend/scripts/reset-db.ts",
    "db:seed": "tsx backend/src/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "sharp"]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
